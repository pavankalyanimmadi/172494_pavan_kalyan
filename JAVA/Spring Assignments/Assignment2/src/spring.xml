      <property name="answers">
      <list>
        <value>megastar</value>
         <value>powerstar</value>
        
      </list>
      </property>
       <property name="answersSet">
      <list>
        <value>megastar</value>
         <value>megastar</value>
         <value>powerstar</value>
          <value>megapowerstar</value>
        
      </list>
      
      </property>
      
      <property name="answersMap">
